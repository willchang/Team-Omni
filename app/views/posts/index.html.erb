	<% if @posts %>
    <% @posts.each do |p| %>
      <tr>
        <td><%= link_to p.id, p %></td>
        <td><%= p.user.username %></td>
        <td><%= p.year.to_s + " " + p.car.make.name + " " + p.car.name %></td>
        <td><%= p.dealer.name + ", " + p.dealer.address + ", " + p.dealer.city + " " + p.dealer.province %></td>
        <td>$<%= p.price_paid %></td>
        <td><%= p.description %></td>
