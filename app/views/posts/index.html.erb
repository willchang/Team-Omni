<div id="">
   <table class="posts">
     <th>Post ID</th>
     <th>User</th>
     <th>Car</th>
     <th>Dealer</th>
     <th>Price Paid</th>
     <th>Description</th>
     
	<% if @posts %>
    <% @posts.each do |p| %>
      <tr>
        <td><%= p.id %></td>
        <td><%= p.user.username %></td>
        <td><%= p.car.year + " " + p.car.make.name + " " + p.car.name %></td>
        <td><%= p.dealer.name + ", " + p.dealer.address + ", " + p.dealer.province %></td>
        <td><%= p.price_paid %></td>
        <td><%= p.description %></td>
      </tr>
    <% end %>
	<% end %>
   </table>
</div>

