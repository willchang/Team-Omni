<h1>Login</h1>

<div class="omni-form">
  <% form_tag do %>
    <!-- <fieldset>
      <legend>Please Log In</legend> -->
      <p>
        <label for="username">Username:</label>
        <%= text_field_tag :username, params[:username] %>
      </p>
      <p>
        <label for="password">Password:</label>
        <%= password_field_tag :password, params[:password] %>
      </p>
      <p>
        <%= submit_tag "Login" %>
      </p>
    <!-- </fieldset> -->
  <% end %>
</div>
